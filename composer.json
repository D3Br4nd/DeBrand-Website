{
  "name": "debrand/headless-wordpress",
  "description": "Headless WordPress setup for DeBrand Studio",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    }
  ],
  "require": {
    "php": ">=8.2",
    "wpackagist-plugin/wp-graphql": "^1.0",
    "wpackagist-plugin/advanced-custom-fields": "^6.0",
    "wpackagist-plugin/wp-graphql-acf": "^2.0",
    "wpackagist-plugin/wordpress-seo": "^20.0",
    "wpackagist-plugin/wp-graphql-yoast-seo": "^3.0"
  },
  "require-dev": {
    "php-stubs/wordpress-stubs": "^6.0"
  },
  "extra": {
    "installer-paths": {
      "wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}